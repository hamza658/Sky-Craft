{% extends "base.html.twig" %}

{% block body %}

    <!-- ============================================================== -->
    <!-- Start right Content here -->
    <!-- ============================================================== -->
    <div class="content-page">
    <!-- Start content -->
    <div class="content">
    <div class="container-fluid">


    <div class="row">
    <div class="col-md-12"  style="display: flex; justify-content: center;align-items:center;width: 100%" >
        <div class="card-box">
            <div class="dropdown pull-right">
                <a href="#" class="dropdown-toggle arrow-none card-drop" data-toggle="dropdown" aria-expanded="false">
                    <i class="mdi mdi-dots-vertical"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-right">
                    <!-- item-->
                    <a href="javascript:void(0);" class="dropdown-item">Action</a>
                    <!-- item-->
                    <a href="javascript:void(0);" class="dropdown-item">Another action</a>
                    <!-- item-->
                    <a href="javascript:void(0);" class="dropdown-item">Something else</a>
                    <!-- item-->
                    <a href="javascript:void(0);" class="dropdown-item">Separated link</a>
                </div>
            </div>

            <h4 class="header-title m-t-0 m-b-30">Ajouter Voiture</h4>
            {{ form_start(formA, {attr: {novalidate: 'novalidate'}}) }}


            <div class="form-group">
                <label for="nom">Matricule</label>

                {{ form_widget(formA.matricule, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(formA.matricule, {'attr': {'class': 'text-danger'}}) }}

            </div>
            <div class="form-group">
                <label for="nom">Marque</label>

                <div class="form-group">
                    {{ form_widget(formA.marque, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(formA.marque, {'attr': {'class': 'text-danger'}}) }}

                </div>
                <div class="form-group">
                    <label for="nom">Couleur</label>

                    <div class="form-group">
                        {{ form_widget(formA.couleur, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(formA.couleur, {'attr': {'class': 'text-danger'}}) }}

                    </div>




                </div>
            </div>
        </div>
    </div>
{%endblock%}